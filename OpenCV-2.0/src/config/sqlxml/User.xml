<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="User">
	<!--用户,没有映射用户所对应的简历 -->
	<resultMap type="bean.user" id="UserResult">
		<id column="id" jdbcType="INTEGER" property="id" />
		<result column="mailbox" jdbcType="VARCHAR" property="mailbox" />
		<result column="username" jdbcType="VARCHAR" property="username" />
		<result column="password" jdbcType="VARCHAR" property="password" />
		<result column="tel" jdbcType="VARCHAR" property="tel" />
	</resultMap>

	<!-- 用户，映射了用户所对应的简历 -->
	<resultMap type="bean.user" id="UserResultwithresume">
		<id column="id" jdbcType="INTEGER" property="id" />
		<result column="mailbox" jdbcType="VARCHAR" property="mailbox" />
		<result column="username" jdbcType="VARCHAR" property="username" />
		<result column="password" jdbcType="VARCHAR" property="password" />
		<result column="tel" jdbcType="VARCHAR" property="tel" />
		<collection property="resume" resultMap="bean.resume"></collection>
	</resultMap>

	<select id="find" parameterType="bean.user" resultMap="UserResult">
		SELECT id FROM user WHERE 1=1
		<if test="mailbox != null">
			and mailbox=#{mailbox}
		</if>
	</select>

	<!-- 根据邮箱返回user id -->
	<select id="find_userid" parameterType="bean.user" resultMap="UserResult">
		SELECT id FROM user WHERE 1=1
		<if test="mailbox != null">
			and mailbox=#{mailbox}
		</if>
	</select>

	<select id="findlogin" parameterType="bean.user" resultMap="UserResult">
		SELECT id FROM user WHERE 1=1
		<if test="mailbox != null">
			and mailbox=#{mailbox}
		</if>
		<if test="password != null">
			and password=#{password}
		</if>
	</select>

	<insert id="register" parameterType="bean.user"
		useGeneratedKeys="true" keyProperty="id">
		insert into
		user(username,password,mailbox,tel) values
		(#{username},#{password},#{mailbox},#{tel})
	</insert>

	<update id="updateOne" parameterType="bean.user">
		update user SET
		password=#{password} where id=#{id}
	</update>

	<select id="find_username" parameterType="bean.user" resultMap="UserResult">
		SELECT username FROM user WHERE 1=1
		<if test="mailbox != null">
			and mailbox=#{mailbox}
		</if>
	</select>

	<select id="find_usernameByID" parameterType="bean.user"
		resultMap="UserResult">
		SELECT username FROM user WHERE 1=1
		<if test="id != null">
			and id=#{id}
		</if>
	</select>

</mapper>
