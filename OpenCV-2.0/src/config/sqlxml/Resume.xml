<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Resume">
	<!--简历，没有关联用户 -->
	<resultMap type="bean.resume" id="resumeResult">
		<id column="id" jdbcType="INTEGER" property="id" />
		<result column="userid" jdbcType="INTEGER" property="userid" />
		<result column="date_time" jdbcType="VARCHAR" property="date_time" />
		<result column="filename" jdbcType="VARCHAR" property="filename" />
		<result column="filepath" jdbcType="VARCHAR" property="filepath" />
	</resultMap>

	<insert id="insert_resume" parameterType="bean.resume"
		useGeneratedKeys="true" keyProperty="id">
		insert into resume(userid,Date,filename,filepath) values
		(#{userid},#{date_time},#{filename},#{filepath})
	</insert>

	<select id="find_resumeByUserID" parameterType="bean.resume"
		resultMap="resumeResult">
		SELECT * FROM resume WHERE 1=1
		<if test="userid !=null">
			and userid=#{userid}
		</if>
	</select>


</mapper>
